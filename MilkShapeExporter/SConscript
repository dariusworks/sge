#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   msPlugInApp.cpp
   msPlugInExportDlg.cpp
   msPlugInImpl.cpp
   StdAfx.cpp
""")

includePaths = Split("""
   #3rdparty/ms3dsdk/msLib
   #3rdparty/NvTriStrip/include
   #3rdparty/wtl/include
   #engine/include
   #tech/include
""")

libPaths = Split("""
   #3rdparty/ms3dsdk/msLib/lib
   #3rdparty/NvTriStrip
   #allguids
   #tech
   #engine
""")

linkLibs = Split("""
   msModelLib.lib
   NvTriStrip.lib
   allguids.lib
   tech.lib
   engine.lib
   comdlg32.lib
""")

local = env.Copy()
local.UseTinyxml()
local.UseZLib()
local.BuildSharedLibrary(target='msSGEExporter',
                         source=sourceFiles + local.RES('msPlugIn.rc'),
                         deffile='#MilkShapeExporter/msPlugin.def',
                         include_path=includePaths,
                         lib_path=libPaths,
                         libs=linkLibs)
