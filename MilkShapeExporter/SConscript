#############################################################################
# $Id$

Import('env')

sources = Split("""
   msPlugInApp.cpp
   msPlugInExportDlg.cpp
   msPlugInImpl.cpp
   StdAfx.cpp
   msPlugIn.def
""")

includePaths = Split("""
   #3rdparty/ms3dsdk/msLib
   #3rdparty/NvTriStrip/include
   #3rdparty/wtl/include
   #engine/include
   #render/include
   #tech/include
""")

libPaths = Split("""
   #3rdparty/ms3dsdk/msLib/lib
   #3rdparty/NvTriStrip
   #allguids
   #tech
   #engine
""")

libs = Split("""
   msModelLib.lib
   NvTriStrip.lib
   allguids.lib
   tech.lib
   engine.lib
   user32.lib
   kernel32.lib
   gdi32.lib
   comdlg32.lib
""")

env = env.Copy()
env.Append(CPPPATH = includePaths)
env.Append(LIBPATH = libPaths)
env.Append(LIBS = libs)
env.UseTinyxml()
env.UseZLib()
if env.get('debug'):
   env['PDB'] = 'msSGEExporter.pdb'
env.SharedLibrary('msSGEExporter', sources + env.RES('msPlugIn.rc'))
