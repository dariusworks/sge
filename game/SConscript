#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   main.cpp
""")

if env['PLATFORM'] == 'win32':
   sourceFiles += env.RES('game.rc')

includePaths = Split("""
   #engine/include
   #gui/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #tech
   #engine
   #gui
""")

linkLibs = Split("""
   allguids
   tech
   engine
   gui
""")

local = env.Copy()
local.UseGL()
local.UseLua()
local.UseTinyxml()
local.UseZLib()
local.BuildExecutable(target='game',
                      source=sourceFiles,
                      include_path=includePaths,
                      lib_path=libPaths,
                      libs=linkLibs)
