#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   main.cpp
""")

if env['PLATFORM'] == 'win32':
   sourceFiles += env.RES('game.rc')

includePaths = Split("""
   #engine/include
   #gui/include
   #network/include
   #platform/include
   #rendergl/include
   #script/include
   #sound/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #engine
   #gui
   #network
   #platform
   #rendergl
   #script
   #sound
   #tech
""")

linkLibs = Split("""
   allguids
   engine
   gui
   network
   platform
   rendergl
   script
   sound
   tech
""")

if env['PLATFORM'] == 'win32':
   linkLibs += ['ws2_32.lib']

local = env.Copy()
local.UseFTGL()
local.UseLua()
local.UseTinyxml()
local.UseZLib()
local.BuildExecutable(target='game',
                      source=sourceFiles,
                      include_path=includePaths,
                      lib_path=libPaths,
                      libs=linkLibs)
