# $Id$

Import('env')

sourceFiles = Split("""
   aboutdlg.cpp
   BitmapUtils.cpp
   CameraDlg.cpp
   cmds.cpp
   DynamicLink.cpp
   editorApp.cpp
   editorCommands.cpp
   editorCtrlBars.cpp
   editorDoc.cpp
   editorTools.cpp
   editorToolState.cpp
   editorTypes.cpp
   editorView.cpp
   LogWnd.cpp
   MainFrm.cpp
   MapPropertiesDlg.cpp
   MapSettingsDlg.cpp
   OutputBar.cpp
   scbarcf.cpp
   scbarg.cpp
   ScriptCmdDlg.cpp
   sizecbar.cpp
   splashwnd.cpp
   stdhdr.cpp
   ToolPalette.cpp
   ToolPaletteBar.cpp
""")

includePaths = Split("""
   #3rdparty/wtl/include
   #engine/include
   #script/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #engine
   #script
   #tech
""")

linkLibs = Split("""
   allguids.lib
   engine.lib
   script.lib
   tech.lib
""")

if env['PLATFORM'] == 'win32':
   local = env.Copy()
   local.UseGL()
   local.UseLua()
   local.UseTinyxml()
   local.UseZLib()
   local.BuildExecutable(target='editor',
                         source=sourceFiles + local.RES('editor.rc'),
                         include_path=includePaths,
                         lib_path=libPaths,
                         libs=linkLibs)
