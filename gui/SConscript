#############################################################################
# $Id$

Import('*')

sources = Split("""
   src/guibasicrenderer.cpp
   src/guibeveledrenderer.cpp
   src/guibutton.cpp
   src/guicontext.cpp
   src/guidialog.cpp
   src/guielementenum.cpp
   src/guielementtools.cpp
   src/guievent.cpp
   src/guifontfactory.cpp
   src/guifactory.cpp
   src/guilabel.cpp
   src/guilayout.cpp
   src/guilistbox.cpp
   src/guipanel.cpp
   src/guirender.cpp
   src/guirenderd3d.cpp
   src/guiscript.cpp
   src/guiscrollbar.cpp
   src/guistyle.cpp
   src/guitextedit.cpp
   src/guitypes.cpp
""")

includePaths = Split("""
   #engine/include
   #gui/include
   #tech/include
""")

if env['PLATFORM'] == 'win32':
   sources = sources + ['src/guifontw32.cpp']
elif env['PLATFORM'] == 'cygwin':
   sources = sources + ['src/guifontx11.cpp']

env = env.Copy()
env.UseGL()
env.UseLua()
env.UseTinyxml()
env.Append(CPPPATH = includePaths)
env.Library('gui', sources)
