#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   src/guibasicrenderer.cpp
   src/guibeveledrenderer.cpp
   src/guibutton.cpp
   src/guicontext.cpp
   src/guidialog.cpp
   src/guielementenum.cpp
   src/guielementtools.cpp
   src/guievent.cpp
   src/guieventrouter.cpp
   src/guieventsounds.cpp
   src/guifontfactory.cpp
   src/guifontfreetype.cpp
   src/guifactory.cpp
   src/guilabel.cpp
   src/guilayout.cpp
   src/guilistbox.cpp
   src/guipage.cpp
   src/guipagelayout.cpp
   src/guipanel.cpp
   src/guiparse.cpp
   src/guirenderd3d.cpp
   src/guirendergl.cpp
   src/guiscript.cpp
   src/guiscrollbar.cpp
   src/guistyle.cpp
   src/guistylesheet.cpp
   src/guititlebar.cpp
   src/guitextedit.cpp
   src/guitypes.cpp
""")

if env['PLATFORM'] == 'win32':
   sourceFiles += ['src/guifontw32.cpp']
elif env['PLATFORM'] == 'cygwin':
   sourceFiles += ['src/guifontx11.cpp']

includePaths = Split("""
   #engine/include
   #gui/include
   #platform/include
   #rendergl/include
   #script/include
   #sound/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #engine
   #rendergl
   #tech
""")

linkLibs = Split("""
   allguids
   engine
   rendergl
   tech
""")

local = env.Copy()
local.UseGL()
local.UseFTGL()
local.UseTinyxml()
local.BuildLibrary(target='gui',
                   source=sourceFiles,
                   include_path=includePaths,
                   lib_path=libPaths,
                   libs=linkLibs)
