#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   freetypeutils.cpp
   glinterleave.cpp
   gltexture.cpp
   render2d.cpp
   renderergl.cpp
   renderfontfreetype.cpp
   renderfontftgl.cpp
""")

if env['PLATFORM'] == 'win32':
   sourceFiles += ['renderfontw32.cpp']
elif env['PLATFORM'] == 'cygwin':
   sourceFiles += ['renderfontx11.cpp']

libPaths = Split("""
   #allguids
   #platform
   #tech
""")

linkLibs = Split("""
   allguids
   platform
   tech
""")

local = env.Copy()
local.UseFTGL()
local.BuildLibrary(target='rendergl',
                   source=sourceFiles,
                   lib_path=libPaths,
                   libs=linkLibs)
