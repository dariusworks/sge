# $Id$

Import('env')

sourceFiles = Split("""
   src/camera.cpp
   src/cmds.cpp
   src/engine.cpp
   src/entity.cpp
   src/entitycmds.cpp
   src/entitycmdmanager.cpp
   src/entitycmdui.cpp
   src/entitycomponents.cpp
   src/entitymanager.cpp
   src/model.cpp
   src/modelanim.cpp
   src/modelms3d.cpp
   src/modelskeleton.cpp
   src/ms3dread.cpp
   src/readwriteutils.cpp
   src/saveloadmanager.cpp
   src/terrain.cpp
   src/terrainrender.cpp
   src/tixml.cpp
""")

includePaths = Split("""
   #engine/include
   #gui/include
   #platform/include
   #rendergl/include
   #script/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #platform
   #script
   #tech
""")

linkLibs = Split("""
   allguids
   platform
   script
   tech
""")

local = env.Copy()
local.UseGL()
local.UseTinyxml()
local.BuildLibrary(target='engine',
                   source=sourceFiles,
                   include_path=includePaths,
                   lib_path=libPaths,
                   libs=linkLibs)
