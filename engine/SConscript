#############################################################################
# $Id$

Import('env')

sourceFiles = Split("""
   src/camera.cpp
   src/cmds.cpp
   src/engine.cpp
   src/entity.cpp
   src/entitycomponents.cpp
   src/entitymanager.cpp
   src/glinterleave.cpp
   src/gltexture.cpp
   src/input.cpp
   src/model.cpp
   src/modelanim.cpp
   src/modelms3d.cpp
   src/modelskeleton.cpp
   src/ms3dread.cpp
   src/readwriteutils.cpp
   src/renderer.cpp
   src/saveloadmanager.cpp
   src/scheduler.cpp
   src/schedulerclock.cpp
   src/sim.cpp
   src/syscommon.cpp
   src/terrain.cpp
   src/terrainrender.cpp
""")

if env['PLATFORM'] == 'win32':
   sourceFiles += ['src/syswin.cpp', 'src/soundwin.cpp']
elif env['PLATFORM'] == 'cygwin':
   sourceFiles += ['src/syslinux.cpp']

includePaths = Split("""
   #engine/include
   #script/include
   #tech/include
""")

libPaths = Split("""
   #allguids
   #script
   #tech
""")

linkLibs = Split("""
   allguids
   script
   tech
""")

local = env.Copy()
local.UseGL()
local.UseTinyxml()
local.BuildLibrary(target='engine',
                   source=sourceFiles,
                   include_path=includePaths,
                   lib_path=libPaths,
                   libs=linkLibs)
