   thread.cpp
   threadcaller.cpp
""")

libPaths = Split("""
   #allguids
""")

linkLibs = Split("""
   allguids
""")

local = env.Copy()
if local.IsShared() and local['PLATFORM'] == 'win32':
   linkLibs += ['advapi32.lib']
local.UseJpeg()
local.UseZLib()
local.BuildLibrary(target='tech',
                   source=sourceFiles,
                   deffile='#tech/tech.def',
                   lib_path=libPaths,
                   libs=linkLibs)
