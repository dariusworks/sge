Import('env')

sourceFiles = Split("""
   bmp.cpp
   color.cpp
   comtools.cpp
   config.cpp
   cpufeatures.cpp
   dictionary.cpp
   dictionarystore.cpp
   dictregstore.cpp
   fileenum.cpp
   filepath.cpp
   filespec.cpp
   frustum.cpp
   functor.cpp
   globalobjreg.cpp
   hash.cpp
   hashtbltest.cpp
   image.cpp
   jpg.cpp
   matrix3.cpp
   matrix4.cpp
   md5.c
   multivar.cpp
   quat.cpp
   ray.cpp
   readwritefile.cpp
   readwritemd5.cpp
   readwritemem.cpp
   readwriteutils.cpp
   resourceformat.cpp
   resourcemanager.cpp
   resourcemanagertest.cpp
   resourcestore.cpp
   resourcestorezip.cpp
   resourceutils.cpp
