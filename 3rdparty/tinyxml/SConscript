Import('env')

sourceFiles = Split("""
   tinystr.cpp
   tinyxml.cpp
   tinyxmlerror.cpp
   tinyxmlparser.cpp
""")

local = env.Copy()
local.Append(CPPDEFINES = ['TIXML_USE_STL'])
local.Library(target='tinyxml', source=sourceFiles)
